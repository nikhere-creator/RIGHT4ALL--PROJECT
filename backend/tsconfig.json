{
  /**
   * TypeScript Configuration for Right4All Backend
   * 
   * Compiler settings for the Node.js backend application.
   * Configures strict type checking, modern JavaScript features, and build output.
   * 
   * @file tsconfig.json
   */
  "compilerOptions": {
    // Target ECMAScript version for output
    "target": "ES2022",
    // Module system for Node.js compatibility
    "module": "commonjs",
    // Standard library features
    "lib": ["ES2022"],
    // Output directory for compiled files
    "outDir": "./dist",
    // Root directory for source files
    "rootDir": "./src",
    // Enable all strict type-checking options
    "strict": true,
    // Enable ES module interoperability
    "esModuleInterop": true,
    // Skip type checking of declaration files
    "skipLibCheck": true,
    // Ensure consistent file name casing
    "forceConsistentCasingInFileNames": true,
    // Allow importing JSON modules
    "resolveJsonModule": true,
    // Generate declaration files for TypeScript
    "declaration": true,
    // Generate source maps for debugging
    "declarationMap": true,
    "sourceMap": true
  },
  // Files to include in compilation
  "include": ["src/**/*"],
  // Files to exclude from compilation
  "exclude": ["node_modules", "dist", "tests"]
}
